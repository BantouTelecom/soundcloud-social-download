= image_tag 'logo.png', :alt => SETTINGS["title"], :id => "logo"

= render "player"

%h1= SETTINGS["header"]

- if session[:download]

	%p Click below to start your download.
	
	= link_to "Download", download_path, :class => "button glow"
	
- else

	%p= SETTINGS["instructions"]
	
	- if logged_in("facebook")
	
		= link_to SETTINGS["facebook"]["button"], "#form", :class => "button", :rel => "facebox"
		
	- elsif logged_in("twitter")
	
		= link_to SETTINGS["twitter"]["button"], "#form", :class => "button", :rel => "facebox"
		
	- elsif logged_in("digg")
	
		= link_to SETTINGS["digg"]["button"], "#form", :class => "button", :rel => "facebox"
		
	-else
	
		- @services.each do |x|
			= link_to image_tag("#{x}.png", :alt => x.capitalize, :border => 0), login_path(x), :class => "button", :title => "Login with #{x.capitalize}"
	
	= render "facebox" if session[:user]